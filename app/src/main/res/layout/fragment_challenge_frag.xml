<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6ffff"
    android:orientation="vertical"
    tools:context=".challenge_frag">


    <Button
        android:id="@+id/hotChal"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:gravity="left|center_vertical"
        android:text="Hot Challenge" />

    <Button
        android:id="@+id/chal1"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_margin="5dp"
        android:background="#bdbfbe"
        android:drawableLeft="@drawable/ic_settings_black_24dp"
        android:gravity="left|center_vertical"
        android:text="Challenge 1" />

    <Button
        android:id="@+id/chal2"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_margin="5dp"
        android:background="#bdbfbe"
        android:drawableLeft="@drawable/ic_notifications_black_24dp"
        android:gravity="left|center_vertical"
        android:text="Challenge 2" />

    <Button
        android:id="@+id/chal3"
        android:layout_width="match_parent"
        android:background="#bdbfbe"
        android:layout_height="112dp"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_dashboard_black_24dp"
        android:gravity="left|center_vertical"
        android:text="Challenge 3" />
</LinearLayout>